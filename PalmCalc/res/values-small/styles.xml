<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="Button_char">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/basic_btn_operation</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>


    <style name="Button_char2">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_effect</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="Text_char">
        <item name="android:textSize">11sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="display_style">
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollbars">none</item>
        <item name="android:textSize">30sp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:windowTitleStyle">@style/dialog_title_style</item>
    </style>

    <style name="dialog_title_style" parent="android:Widget.TextView">
        <item name="android:background">#2E2E2E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tip">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="rateus">
        <item name="android:textColor">#64bef3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="wheelfont">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="digit_button_style" parent="button_style">
        <item name="android:background">@drawable/btn</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">30dp</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/btn</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <style name="digit_button_styleText" parent="button_styleTExt">
        <item name="android:background">@drawable/basic_btn_normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="digit_button_stylered" parent="button_styleTExt">
        <item name="android:background">@drawable/basic_btn_red</item>
    </style>

    <style name="button_styleTExt">
        <item name="android:textSize">20dp</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/btn_small_disabled</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <style name="basic_calc">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="keypadtext">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Bmi_result">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>